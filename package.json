{
	"name": "electron-react-todo-app",
	"description": "electron-react-todo-app",
	"author": "YuriNa",
	"version": "0.1.0",
	"private": true,
	"main": "electron/main.js",
	"homepage": "./",
	"scripts": {
		"start:web": "react-app-rewired start",
		"start:electron": "nodemon --watch electron --exec \"electron .\"",
		"start": "concurrently \"cross-env BROWSER=none yarn start:web\" \"wait-on http://localhost:3000 && yarn start:electron\"",
		"build:web": "react-app-rewired build",
		"build:electron": "shx cp -r electron/. build/electron",
		"build": "yarn build:web && yarn build:electron",
		"clean": "shx rm -rf build dist",
		"prepackage": "yarn clean && yarn build",
		"package": "electron-builder build -w -c.extraMetadata.main=build/electron/main.js"
	},
	"dependencies": {
		"@date-io/date-fns": "^1.3.11",
		"@material-ui/core": "^4.3.3",
		"@material-ui/icons": "^4.4.3",
		"@material-ui/pickers": "^3.2.6",
		"@material-ui/styles": "^4.3.3",
		"date-fns": "^2.4.1",
		"electron-is-dev": "^1.1.0",
		"formik": "^1.5.8",
		"formik-material-ui": "^0.0.22",
		"lodash-id": "^0.14.0",
		"lowdb": "^1.0.0",
		"react": "^16.10.1",
		"react-dom": "^16.10.1",
		"react-scripts": "^3.1.1"
	},
	"devDependencies": {
		"@hot-loader/react-dom": "^16.9.0",
		"concurrently": "^4.1.2",
		"cross-env": "^6.0.2",
		"customize-cra": "^0.8.0",
		"electron": "^6.0.11",
		"electron-builder": "^21.2.0",
		"eslint-config-prettier": "^6.1.0",
		"react-app-rewired": "^2.1.3",
		"react-hot-loader": "^4.12.11",
		"shx": "^0.3.2",
		"wait-on": "^3.3.0"
	},
	"build": {
		"appId": "com.example.electron-react-todo-app",
		"productName": "ElectronReactTodoApp",
		"copyright": "Copyright 2019 ${author}",
		"files": [
			"build/**/*",
			"node_modules/**/*"
		],
		"directories": {
			"buildResources": "assets"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
